<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="3"/>
		<height value="3"/>
		<max-hp value="2600" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="60"/>	
		<armor-type value="metal"/>				
		<sight value="20"/>
		<time value="130"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="advanced" kills="15"/>
			<level name="elite" kills="25"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="rotated_climb"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="250"/>	
			<resource name="wood" amount="150"/>	
			<resource name="oil" amount="10"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/swordman.bmp"/>
		<image-cancel path="../headquarters/images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/swordman_select1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select4.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select5.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select6.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select7.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/swordman_ack1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack4.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack5.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack6.wav"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="45"/>
			<animation path="models/mrds_idle.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="40"/>
			<animation path="models/mrds_move_2.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="350"/>
			<anim-speed value="40"/>
			<animation path="models/mrds_move_2_.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/mrds_attack.g3d"/>
			<sound enabled="true" start-time="0.47">
				<sound-file path="$COMMONDATAPATH/sounds/airship_attack1.wav"/>
			</sound> 
			<attack-strenght value="500"/>
			<attack-var value="100"/>
			<attack-range value="12"/>
			<attack-type value="energy"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="$COMMONDATAPATH/sounds/airship_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>	

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/mrds_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/swordman_die1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/swordman_die2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>
	
	<commands>
		
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../headquarters/images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../headquarters/images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack_land"/>
			<image path="images/swordman_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../headquarters/images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

	</commands>
</unit>
